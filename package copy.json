{
  "devDependencies": {
    "esbuild": "^0.24.2",
    "sass": "^1.71.0",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.4",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "build": "npm-run-all --parallel build:js build:css",
    "build:js": "esbuild src/js/main.js --bundle --outfile=dist/js/main.js --format=iife --minify",
    "build:css": "sass src/scss/main.scss dist/css/main.css --style=compressed",
    "watch": "npm-run-all --parallel watch:js watch:css",
    "watch:js": "esbuild src/js/main.js --bundle --outfile=dist/js/main.js --format=iife --watch",
    "watch:css": "sass src/scss/main.scss dist/css/main.css --style=expanded --watch"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
